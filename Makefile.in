COMPPLUSPLUS = g++
COMP = gcc
CRFSUITEPATH = -Lcrfsuite/libs
BINPATH = bin/linux
OBJPATH = objs/linux
LIBOBJPATH = libobjs/linux
SYSTEMSPATH = -Lsystems -Llibs/linux ${CRFSUITEPATH}
MULTIGA=-DMULTIGLOBALATANOR

#FLTK support
FLTKFLAG = -DWITHFLTK
    
SOURCEGUI= atanorbitmap.cxx atanorbox.cxx atanorbrowser.cxx atanorbutton.cxx atanorchoice.cxx atanorconsole.cxx atanorcounter.cxx atanoreditor.cxx atanorfilebrowser.cxx atanorfltk.cxx atanorgroup.cxx atanorimage.cxx atanorprogress.cxx atanorslider.cxx atanortabs.cxx atanorwidget.cxx atanorwindow.cxx atanorwinput.cxx atanorwoutput.cxx atanorwtable.cxx


FLTKLIBS=-lfltk -lfltk_images


#Python support to compile atanor python library: 'pyatan'
INCLUDEPYTHON = -I/usr/include/python2.7
PYTHONLIB = 


# JPEG support
JPEGFLAG = -DFLTKNOJPEG
#JPEGLIB = -lfltk_jpeg

# SSL support
SSLLIB= -lssl

# CRYPTO support
CRYPTOLIB= -lcrypto

# GMP support
GMPLIB= -lgmp

INCLUDEPATH = -Iinclude/linux

# Compiler C++11 option
C++11Flag = -std=c++11
# boost regex support
REGEXFLAG = -DREGEXCPP
REGEX=-DATANOR_REGEX $(REGEXFLAG)

LIBREGEX= -Lsystems -lboost_regex

